import UIKit

//ex1
func addition(a: Int, b: Int) -> Int {
        return a+b
}
print(addition(a: 3, b: 2))

//ex2
func numberToString(numberAndString: (Int, String)) -> String {
    return String(numberAndString.0)+numberAndString.1
}
print(numberToString(numberAndString: (3, "abc")))

